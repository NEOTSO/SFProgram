/* component/titleBar/titleBar.wxss */

.titleBar_box {
  padding: 20rpx 40rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  border-bottom: 1px solid #f1f1f1;
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #fff;
  z-index: 1;
  /* flex-direction: row-reverse; */
}

.titleBar_box .titleBar_content {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  flex-direction: column;
}

.titleBar_content .titleBar_bar {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: end;
  -ms-flex-pack: end;
  justify-content: flex-end;
  width: 50%;
  align-self: flex-end;
}

.titleBar_bar .titleBar_bar_search {
  width: 50rpx;
  height: 50rpx;
  margin-right: 40rpx;
}

.titleBar_bar_search image {
  width: 100%;
  height: 100%;
}

.titleBar_bar .titleBar_bar_more {
  width: 70rpx;
  height: 70rpx;
  margin-left: 40rpx;
}

.titleBar_bar_more image {
  width: 100%;
  height: 100%;
}

.titleBar_box .titleBar_title {
  flex: 1;
  display: flex;
  align-items: center;
  width: 50%;
}
