/* pages/homePage/homePage.wxss */

.homePage {
  width: 100%;
  min-height: 100%;
  background-color: #fff;
  position: relative;
}

.homePage .homePage_userBox {
  top: 100rpx;
  z-index: 1;
  position: absolute;
  width: 100%;
}

.homePage_userBox .homePage_userBox_flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.homePage_userBox .homePage_userBox_honor {
  display: flex;
  align-self: flex-end;
}

.homePage_userBox_honor .homePage_userBox_honor_item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 5rpx;
  color: #989899;
}

.homePage_userBox_honor_item .homePage_userBox_honor_item_image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.homePage_userBox_honor_item_image image {
  width: 100%;
  height: 100%;
}

.homePage_userBox .homePage_userBox_user {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 5px 0px #ccc;
  overflow: hidden;
}

.homePage_userBox_user image {
  width: 100%;
  height: 100%;
}

.homePage_userBox .homePage_userBox_info {
  display: flex;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f1f1f1;
}

.homePage_userBox_info .homePage_userBox_info_item {
  display: flex;
  flex-direction: column;
  margin-right: 40rpx;
}

.homePage_userBox .homePage_detailed {
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.homePage_detailed .homePage_detailed_flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1;
  padding: 30rpx 0;
  font-size: 34rpx;
}
.homePage_userBox .homePage_my {
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.homePage_userBox .homePage_my_flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1;
  padding: 30rpx 0;
  font-size: 34rpx;
}

.homePage_userBox .homePage_my_dynamic {
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}
