/* pages/search/search.wxss */

.search {
  width: 100%;
  min-height: 100%;
  background-color: #fff;
}

.search .search_box {
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f1f1f1;
  justify-content: space-between;
}

.search_box .search_box_input {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #ededed;
  flex: 1;
  border-radius: 5rpx;
}

.search_box_input input {
  width: 100%;
  margin-right: 30rpx;
  font-size: 30rpx;
}

.search_box_input .search_box_input_image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 30rpx;
}

.search_box_input_image image {
  width: 100%;
  height: 100%;
}

.search .search_box_cancel {
  margin-left: 30rpx;
  color: #24a071;
}

.search_history {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.search_history .search_history_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-left: 10rpx solid #24a071;
  margin-bottom: 40rpx;
}

.search_history_title .search_history_title_text {
  margin-left: 15rpx;
  font-weight: bold;
}

.search_history_title .search_history_title_clear {
  font-size: 35rpx;
}

.search_history .search_history_item {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 30rpx 0;
  justify-content: space-between;
}

.search_history_item .search_history_item_image {
  flex-basis: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

.search_history_item_image image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.search_history_item .search_history_item_text{
  font-size: 32rpx;
  flex: 1;
}
.search_history_item .search_history_item_delete{
  flex-basis: 30rpx;
  height: 30rpx;
}
.search_history_item_delete image{
  width: 100%;
  height: 100%;
}