/* pages/login/login.wxss */

.login {
  width: 100%;
  min-height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.login .login_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.login_title .login_title_l {
  color: hsla(0, 0%, 95%, 0.529);
}

.login_title .login_title_r {
  color: #fff;
}

.login .login_logo {
  width: 286px;
  height: 100px;
  position: absolute;
  top: 210rpx;
  align-self: center;
}

.login_logo image {
  width: 100%;
  height: 100%;
}

.login .login_button {
  margin-bottom: 140rpx;
}

.login_button .login_button_login {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  border-radius: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login_button .login_button_new {
  width: 100%;
  height: 120rpx;
  border: 1px solid #fff;
  color: #fff;
  border-radius: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.login_button .login_clause {
  margin-top: 50rpx;
  color: #fff;
  display: flex;
  justify-content: center;
}

.login_clause .underline {
  text-decoration: underline;
  margin-left: 10rpx;
}

.login .login_box {
  width: 100%;
  height: 20%;
  position: fixed;
  bottom: -100%;
  background-color: #fff;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  transition: all ease-in 0.3s;
  z-index: 1;
}

.login_box .login_box_close {
  position: absolute;
  top: 0;
  right: 0;
}

.login_box_close .login_box_close_image {
  padding: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.login_box_close_image image {
  width: 100%;
  height: 100%;
}

.login_box .login_box_title {
  font-size: 26rpx;
  color: #989899;
  position: relative;
}

.login_box .login_box_title::before {
  content: "";
  height: 1px;
  width: 20%;
  background-color: #989899;
  position: absolute;
  top: 0;
  bottom: 0;
  left: -30%;
  margin: auto 0;
}

.login_box .login_box_title::after {
  content: "";
  height: 1px;
  width: 20%;
  background-color: #989899;
  position: absolute;
  top: 0;
  bottom: 0;
  right: -30%;
  margin: auto 0;
}

.login_box .login_box_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  font-size: 28rpx;
}

.login_box_item button {
  border-radius: 0;
  background-color: #fff;
  border: 0;
  line-height: 20px;
  font-size: 30rpx;
}

.login_box_item .login_box_item_image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 2rpx;
}

.login_box_item_image image {
  width: 100%;
  height: 100%;
}
