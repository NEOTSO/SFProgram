/* pages/submission/submission.wxss */
.submission {
  width: 100%;
  min-height: 100%;
  background-color: #fff;
}

.submission .submission_title {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1;
}

.submission_title .submission_title_close {
  flex-basis: 40rpx;
  height: 40rpx;
  padding: 40rpx;
}

.submission_title_close image {
  width: 100%;
  height: 100%;
}

.submission_title .submission_title_text {
  font-size: 40rpx;
  margin-left: 20rpx;
}

.submission_title .submission_title_next {
  padding: 40rpx;
  flex: 1;
  display: flex;
  justify-content: flex-end;
  color: #989899;
  font-size: 34rpx;
}
.submission .submission_input{
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.submission .submission_input textarea{
  width: 100%;
  min-height: 40px;
}
