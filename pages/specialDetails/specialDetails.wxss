/* pages/specialDetails/specialDetails.wxss */

.specialDetails {
  background-color: #fff;
  width: 100%;
  min-height: 100%;
}

.specialDetails_box {
  border-bottom: 1px solid #f1f1f1;
  padding-bottom: 30rpx;
  width: 100%;
}

.specialDetails_box .specialDetails_box_bgImage {
  height: 380rpx;
  width: 100%;
  position: relative;
}

.specialDetails_box .specialDetails_box_bgImage::before {
  content: '';
  display: block;
  width: 100%;
  height: 380rpx;
  background-color: hsla(0, 0%, 0%, 0.418);
  position: absolute;
  top: 0;
}

.specialDetails_box_bgImage image {
  width: 100%;
  height: 100%;
}

.specialDetails_box .specialDetails_box_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1;
  overflow: hidden;
}
.specialDetails_box_title .specialDetails_box_title_text{
  opacity: 0;
  font-size: 40rpx;
}
.specialDetails_box_title .specialDetails_box_title_image {
  width: 50rpx;
  height: 50rpx;
}

.specialDetails_box_title_image.rotate180 {
  transform: rotate(180deg);
}

.specialDetails_box_title_image image {
  width: 100%;
  height: 100%;
}

.specialDetails .specialDetails_box_userInfo {
  position: relative;
  transition: all .3s ease-in; 
  width: 100%;
}

.specialDetails_box_userInfo .specialDetails_box_userInfo_image {
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  border-radius: 5px;
  position: absolute;
  top: -90rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.specialDetails_box_userInfo_image image {
  width: 100%;
  height: 100%;
}

.specialDetails_box_userInfo .specialDetails_box_userInfo_title {
  padding-top: 130rpx;
  text-align: center;
  font-size: 40rpx;
}

.specialDetails_box_userInfo .specialDetails_box_userInfo_follow {
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top: 20rpx;
  color: #989899;
  font-size: 30rpx;
}

.specialDetails_box_userInfo .specialDetails_box_userInfo_button {
  margin-top: 40rpx;
  display: flex;
  align-content: center;
  justify-content: center;
}

.specialDetails_box_userInfo_button text {
  padding: 20rpx 60rpx;
  color: #fff;
  border-radius: 5px;
  overflow: hidden;
}
.specialDetails .specialDetails_container{
  padding: 40rpx;
  box-sizing: border-box
}
