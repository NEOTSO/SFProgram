/* pages/editor/editor.wxss */

.editor {
  width: 100%;
}

.editor .editor_titleBox {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  z-index: 3;
  background-color: #fff;
}

.editor_titleBox .editor_titleBox_close {
  flex-basis: 35rpx;
  height: 35rpx;
}

.editor_titleBox_close image {
  width: 100%;
  height: 100%;
}
.editor .editor_box {
  width: 100%;
  padding: 100rpx 40rpx 0 40rpx;
  box-sizing: border-box;
  min-height: 100%;
  background-color: #fff;
}

.editor_box .editor_box_userBox {
  height: 280rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.editor_box_userBox .editor_box_userBox_image {
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  object-fit: cover;
  position: relative;
  box-shadow: 0px 0px 5px 0px #ccc;
}

.editor_box_userBox_image image {
  width: 100%;
  height: 100%;
}

.editor_box_userBox_image .editor_box_userBox_upload {
  width: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  height: 40rpx;
}

.editor_box_userBox_upload image {
  width: 100%;
  height: 100%;
}

.editor .editor_box_list {
  display: flex;
  align-items: center;
  padding-bottom: 100rpx;
}

.editor_box_list .editor_box_list_image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}

.editor_box_list_image image {
  width: 100%;
  height: 100%;
}

.editor .editor_label {
  display: flex;
  padding-bottom: 100rpx;
}

.editor_label .editor_label_image {
  flex-basis: 40rpx;
  height: 40rpx;
}

.editor_label_image image {
  width: 100%;
  height: 100%;
}

.editor_label_box .editor_label_box_item {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.editor_label_box_item .editor_label_box_item_text {
  background-color: #ededed;
  color: #989899;
  font-size: 28rpx;
  padding: 8rpx;
  border-radius: 5px;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.editor_label .editor_label_box {
  margin-left: 40rpx;
  flex: 1;
}

.editor_label .editor_label_box_add {
  display: flex;
  align-items: center;
}

.editor_label_box_add .editor_label_box_add_image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.editor_label_box_add_image image {
  width: 100%;
  height: 100%;
}

.editor_box .editor_item {
  display: flex;
  padding-bottom: 100rpx;
}

.editor_item .editor_item_image {
  flex-basis: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}

.editor_item_image image {
  width: 100%;
  height: 100%;
}

.editor_item .editor_item_box {
  flex: 1;
}

.editor_item_box .editor_item_content {
  display: flex;
  margin-bottom: 40rpx;
  font-size: 34rpx;
}

.editor_item_content .editor_item_content_delete {
  flex-basis: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.editor_item_content_delete image {
  width: 100%;
  height: 100%;
}

.editor_item_content .editor_item_content_describe {
  flex: 1;
}

.editor_item_content_describe .editor_item_content_describe_text {
  color: #989899;
}

.editor_item_box .editor_item_delete {
  display: flex;
  align-items: center;
}

.editor_item_delete .editor_item_delete_image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.editor_item_delete_image image {
  width: 100%;
  height: 100%;
}
